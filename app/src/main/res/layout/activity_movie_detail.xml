<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.macbookpro.MovieBook.MovieDetailActivity">

    <TextView
        android:id="@+id/textView_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_weight="2"
        android:text="Overview"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/com_facebook_likeboxcountview_text_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/linear"
            android:layout_weight="0"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView_movie"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/imageView_movie"
                android:layout_toRightOf="@+id/imageView_movie"
                android:lines="2"
                android:maxLines="3"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView_title"
                android:layout_alignStart="@+id/textView_title"
                android:layout_below="@+id/textView_title"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/com_facebook_likeboxcountview_caret_width"
                android:layout_weight="0"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView_vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView_title"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/cardview_default_elevation"
                android:text="vote" />

            <TextView
                android:id="@+id/textView_imdbid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView_status"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView_company"
                android:layout_alignStart="@+id/textView_company"
                android:layout_below="@+id/textView_imdbid"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/com_facebook_likeboxcountview_caret_width"
                android:text="Production"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView_prodcountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView_budget"
                android:layout_alignStart="@+id/textView_budget"
                android:layout_below="@+id/textView_budget"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView_company"
                android:layout_alignStart="@+id/textView_company"
                android:layout_below="@+id/textView_company"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView_status"
                android:layout_alignRight="@+id/textView_status"
                android:layout_below="@+id/textView4"
                android:layout_marginBottom="@dimen/com_facebook_auth_dialog_corner_radius_oversized"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="TextView" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
